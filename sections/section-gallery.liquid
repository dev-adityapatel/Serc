{% style %}
  .gallery-image {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  .gallery {
    width: 25%;
  }
  .gallery img {
    width: 100%;
    height: auto;
  }
{% endstyle %}
<section class="section-padding {{ section.settings.width }}">
  <h2>{{ section.settings.heading }}</h2>
    <div class="gallery-image">
        {%- for block in section.blocks -%}
          <div class="gallery">
            {%- case block.type -%}
            {%- when 'gallery' -%}
                {%- # Label: Image -%}
                {%- assign image = block.settings.image -%}
                {{ image | image_url: width: image.width | image_tag: class: 'custom-gallery', loading: 'lazy' }}
            {%- endcase -%}
            </div>
          {%- endfor -%} 
    </div>
</section>
{% schema %}
  {
  "name": "Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "placeholder": "Heading",
      "info": "Gallery Heading"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper--full",
      "options": [
        {"value": "wrapper--full", "label": "Full width"},
        {"value": "wrapper--full-padded", "label": "Full width padded"},
        {"value": "wrapper", "label": "Normal"}
      ]
    }
  ],
  "blocks": [
    {
      "name": "Gallery",
      "type": "gallery",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Gallery"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery"
    }
  ]
}  
{% endschema %}

